@{
    ViewBag.Title = "Comments List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div ng-app="myApp" id="body">
    <div ng-controller="myCtrl">
        <h2>AngularJS CRUD Operations with MVC5 WebAPI</h2>

        <h3>List of comments</h3>

        <table >
            <thead>
                <tr>
                    <th style="display: none;">ID</th>
                    <th>Text</th>
                    <th>file_name</th>
                    <th>file_content</th>
                    <th>submit_date</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="items in CommentsData">
                    <td hidden="hidden">{{items.Id}}</td>
                    <td>{{items.Text}}</td>
                    <td>{{items.File_name}}</td>
                    <td>{{items.File_content}}</td>
                    <td>{{items.Submit_date}}</td>

                    <td>
                        <button ng-model="$scope.comment"
                                ng-click="edit(CommentsData[$index])">
                            Edit
                        </button>
                        <button ng-click="delete($index)">Delete</button>
                    </td>
                </tr>
            </tbody>
           
        </table>
       
        <div>
            <div>
                <h2>Add New Product</h2>
            </div>
            <div>
                <label for="name">Text</label>
                <input type="text" data-ng-model="comment.Text" />
            </div>

            <div>
                <label for="category">File_name</label>
                <input type="text" data-ng-model="comment.File_name" />
            </div>

            <label for="category">choose file</label>
            <input type="file" id="file" name="file" />
            
        </div>

            <br />
            <div>
                <button data-ng-click="save()">Save</button>
                <button data-ng-click="clear()">Clear</button>
            </div>
        </div>





    </div>
</div>